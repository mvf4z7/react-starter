{
  "name": "react-starter",
  "version": "1.0.0",
  "description": "Boilerplate for ReactJS project with hot code reloading and an ExpressJS server",
  "scripts": {
    "start": "npm run build && NODE_ENV=production node server.js",
    "start-dev": "nodemon server.js",
    "start-hot": "node hot-server.js",
    "build": "webpack",
    "lint": "eslint src/*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gaearon/react-hot-boilerplate.git"
  },
  "devDependencies": {
    "babel-core": "^5.4.7",
    "babel-eslint": "^3.1.9",
    "babel-loader": "^5.1.2",
    "eslint-plugin-react": "^2.3.0",
    "react-hot-loader": "^1.2.7",
    "webpack": "^1.9.6",
    "webpack-dev-server": "^1.8.2"
  },
  "dependencies": {
    "body-parser": "^1.13.3",
    "cookie-parser": "^1.3.5",
    "express": "^4.13.2",
    "morgan": "^1.6.1",
    "proxy-middleware": "^0.13.0",
    "react": "^0.13.0",
    "react-router": "^0.13.3"
  }
}
